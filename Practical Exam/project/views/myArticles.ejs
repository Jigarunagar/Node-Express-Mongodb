<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Articles - Modern Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('navbar') %>
    
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">My Articles</h1>
            <p class="page-subtitle">Manage your published content</p>
        </div>

        <% if (articles && articles.length > 0) { %>
            <div class="article-grid">
                <% articles.forEach(article => { %>
                    <div class="card article-card">
                        <h2 class="article-title">
                            <a href="/articles/<%= article.id %>"><%= article.title %></a>
                        </h2>
                        <div class="article-meta">
                            <span>Created: <%= new Date(article.created_at).toLocaleDateString() %></span>
                            <span>Updated: <%= new Date(article.updated_at).toLocaleDateString() %></span>
                        </div>
                        <div class="article-excerpt">
                            <%= article.content.substring(0, 150) %><%= article.content.length > 150 ? '...' : '' %>
                        </div>
                        <div class="article-actions">
                            <a href="/articles/<%= article.id %>" class="btn btn-secondary btn-sm">View</a>
                            <a href="/articles/<%= article.id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                            <form action="/articles/<%= article.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this article?')">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-state-icon">✏️</div>
                <h2 class="empty-state-title">No Articles Yet</h2>
                <p class="empty-state-text">Start writing and share your thoughts with the world!</p>
                <a href="/articles/new" class="btn btn-primary">Write Your First Article</a>
            </div>
        <% } %>
    </div>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= article.title %> - Modern Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('navbar') %>
    
    <div class="container">
        <div class="article-content">
            <div class="card">
                <h1 class="article-full-title"><%= article.title %></h1>
                
                <div class="article-full-meta">
                    <div>
                        <span class="article-author">By <%= article.author_name %></span>
                    </div>
                    <div>
                        <span>Published: <%= new Date(article.created_at).toLocaleDateString() %></span>
                        <% if (article.updated_at !== article.created_at) { %>
                            <span> â€¢ Updated: <%= new Date(article.updated_at).toLocaleDateString() %></span>
                        <% } %>
                    </div>
                </div>

                <div class="article-full-content">
                    <%= article.content.split('\n').map(paragraph => `<p>${paragraph}</p>`).join('') %>
                </div>

                <% if (user && (user.id === article.author_id || user.role === 'admin')) { %>
                    <div class="article-actions">
                        <a href="/articles/<%= article.id %>/edit" class="btn btn-primary">Edit Article</a>
                        <form action="/articles/<%= article.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this article?')">
                            <button type="submit" class="btn btn-danger">Delete Article</button>
                        </form>
                    </div>
                <% } %>
            </div>

            <!-- Comments Section -->
            <div class="comments-section">
                <h3>Comments (<%= comments.length %>)</h3>

                <% if (user) { %>
                    <div class="card" style="margin-bottom: 2rem;">
                        <form action="/articles/<%= article.id %>/comments" method="POST">
                            <div class="form-group">
                                <label for="comment" class="form-label">Add a comment</label>
                                <textarea 
                                    id="comment" 
                                    name="content" 
                                    class="form-textarea" 
                                    rows="4" 
                                    required 
                                    placeholder="Share your thoughts..."
                                ></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Post Comment</button>
                        </form>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        <a href="/auth/login">Login</a> to leave a comment.
                    </div>
                <% } %>

                <% if (comments && comments.length > 0) { %>
                    <% comments.forEach(comment => { %>
                        <div class="comment">
                            <div class="comment-meta">
                                <span class="comment-author"><%= comment.author_name %></span>
                                <span><%= new Date(comment.created_at).toLocaleDateString() %></span>
                            </div>
                            <p><%= comment.content %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="empty-state">
                        <p>No comments yet. Be the first to share your thoughts!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>